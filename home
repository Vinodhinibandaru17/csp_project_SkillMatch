import React, { useState, useEffect } from "react";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { useQuery } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Badge } from "@/components/ui/badge";
import { 
  Search, 
  TrendingUp, 
  Users, 
  CheckCircle, 
  MapPin, 
  Briefcase,
  Clock,
  DollarSign
} from "lucide-react";
import { Card, CardContent } from "@/components/ui/card";

export default function Home() {
  const navigate = useNavigate();
  const [user, setUser] = useState(null);
  const [searchQuery, setSearchQuery] = useState("");

  const { data: jobs = [] } = useQuery({
    queryKey: ['jobs'],
    queryFn: () => base44.entities.JobListing.filter({ status: "active" }),
    initialData: [],
  });

  const { data: applications = [] } = useQuery({
    queryKey: ['applications'],
    queryFn: () => base44.entities.Application.list(),
    initialData: [],
  });

  useEffect(() => {
    checkAuth();
  }, []);

  const checkAuth = async () => {
    try {
      const currentUser = await base44.auth.me();
      setUser(currentUser);
      
      if (!currentUser.user_type) {
        navigate(createPageUrl("RoleSelection"));
      }
    } catch (error) {
      base44.auth.redirectToLogin();
    }
  };

  const handleSearch = () => {
    navigate(createPageUrl("BrowseJobs") + `?search=${searchQuery}`);
  };

  const activeJobs = jobs.length;
  const totalApplications = applications.length;

  return (
    <div className="min-h-screen">
      {/* Hero Section */}
      <div className="bg-gradient-to-br from-blue-600 via-blue-500 to-teal-500 text-white py-20 px-4">
        <div className="max-w-6xl mx-auto">
          <div className="text-center mb-8">
            <Badge className="bg-white/20 text-white border-white/30 mb-6 py-2 px-4">
              <CheckCircle className="w-4 h-4 mr-2" />
              No Spam • No Fake Jobs • 100% Verified
            </Badge>
            <h1 className="text-4xl md:text-6xl font-bold mb-6">
              Find Your Dream Job<br />
              <span className="text-teal-200">Without The Spam</span>
            </h1>
            <p className="text-xl text-blue-100 mb-12 max-w-3xl mx-auto">
              Connect with verified employers. From corporate careers to skilled labor jobs. 
              Your next opportunity awaits.
            </p>

            {/* Search Bar */}
            <div className="max-w-3xl mx-auto mb-12">
              <div className="flex gap-3 bg-white rounded-xl p-2 shadow-2xl">
                <div className="flex-1 flex items-center gap-3 px-4">
                  <Search className="w-5 h-5 text-slate-400" />
                  <Input
                    placeholder="Search job title, company, or location..."
                    value={searchQuery}
                    onChange={(e) => setSearchQuery(e.target.value)}
                    onKeyPress={(e) => e.key === 'Enter' && handleSearch()}
                    className="border-0 focus-visible:ring-0 text-slate-900 text-lg"
                  />
                </div>
                <Button 
                  onClick={handleSearch}
                  className="bg-blue-600 hover:bg-blue-700 text-white px-8 py-6 text-lg"
                >
                  Search Jobs
                </Button>
              </div>
            </div>

            {/* Stats */}
            <div className="flex justify-center gap-8 flex-wrap">
              <div className="flex items-center gap-2">
                <TrendingUp className="w-5 h-5" />
                <span className="font-semibold">{activeJobs}+ Active Jobs</span>
              </div>
              <div className="flex items-center gap-2">
                <Users className="w-5 h-5" />
                <span className="font-semibold">{totalApplications}+ Applications</span>
              </div>
              <div className="flex items-center gap-2">
                <CheckCircle className="w-5 h-5" />
 
